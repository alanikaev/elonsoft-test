<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-5 text-center">Добавление организатора</h1>
      <%= form_for :organizer, url: organizers_path do |f| %>
        <% if @organizer.errors.any? %>
          <% @organizer.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
          <% end %>
        <% end %>
        <div class="form-group">
          <%= f.label :name, "Название организации*" %> <br>
          <%= f.text_field(:name, {:class => "form-control"}) %>
        </div>
        <div class="form-group">
          <%= f.label :desc, "Описание*" %> <br>
          <%= f.text_area(:desc, {:class => "form-control"}) %>
        </div>
        <%= f.submit("Создать", {:class => "btn btn-success mb-3"}) %>
      <% end %>
    </div>
  </div>
</div>