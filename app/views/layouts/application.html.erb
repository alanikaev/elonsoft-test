<%= tinymce_assets %>
<!DOCTYPE html>
<html>
<head>
  <title>Elonsoft</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar bg-dark navbar-dark mb-5">
  <%= link_to "Elonsoft", home_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="collapsibleNavbar">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "Создать мероприятие", new_event_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Добавить организатора", new_organizer_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Список организаторов", organizers_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Прошедшие", past_events_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Предстоящие", upcoming_events_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Подписка на предстоящие мероприятия", new_subscriber_path %>
      </li>
      <% if @admin %>
        <li class="nav-item">
          <%= link_to "Выйти", admin_panel_signout_path %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Войти(режим администратора)", admin_panel_signin_path %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
<%= yield %>
</body>
</html>
